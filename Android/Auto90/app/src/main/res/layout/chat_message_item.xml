<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/chat_message_itemLL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scaleX="1"
    android:layout_marginTop="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/chat_message_userImgCV"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/chat_message_userImgIV"
            android:src="@drawable/ic_account_circle_48px"/>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/chatTri1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:scaleX="-1"
            android:tint="@color/colorAccent"
            android:src="@drawable/triangle90"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/chatTri2"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:paddingRight="0dp"
            android:scaleX="-1"
            android:scaleY="-1"
            android:tint="@color/colorAccent"
            android:src="@drawable/triangle90"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msgItemCV"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorAccent"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp"
        android:scaleX="1"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chat_message_userNameTV"
                android:text="Mamdouh El Nakeeb"
                android:maxLines="1"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chat_message_textTV"
                android:textColor="@color/white"
                android:text="Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum Lorem Ipsum "/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:visibility="gone"
                android:id="@+id/chat_message_imgIV"
                android:scaleType="centerCrop"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>